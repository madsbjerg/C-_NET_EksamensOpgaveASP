@model BilReperationFirmaWebApp.Models.Mechanic

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Mechanic</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HiringDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HiringDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Salary)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
        <h5>Orders</h5>
        <hr />
        @foreach (var order in Model.Orders)
        {
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Orders.FirstOrDefault().IsFinished)</dt>
                <dd class="col-sm-10">
                    @order.IsFinished
                </dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Orders.FirstOrDefault().Price)</dt>
                <dd class="col-sm-10">
                    @order.Price
                </dd>
                <td>
                    @foreach (var orderType in order.OrderTypes)
                    {
                    <dt class="col-sm-2">Service</dt>
                    <dd class="col-sm-10">
                            @orderType.Type.Description
                    </dd>
                    }
                </td>
            </dl>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
